<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="columns.top">
            <block before="-" class="Tweakwise\Magento2Tweakwise\Block\Navigation\SearchBanner\SearchBannerRenderer" name="navigation.search.banner.container.top" template="Tweakwise_Magento2Tweakwise::searchbanner/search.banner.container.top.phtml">
                <arguments>
                    <argument name="tweakwise_navigation_context" xsi:type="object">Tweakwise\Magento2Tweakwise\Model\NavigationConfig\Search</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="content">
            <block before="-" class="Tweakwise\Magento2Tweakwise\Block\Navigation\SearchBanner\SearchBannerRenderer" name="navigation.search.banner.list.top" template="Tweakwise_Magento2Tweakwise::searchbanner/search.banner.list.top.phtml">
                <arguments>
                    <argument name="tweakwise_navigation_context" xsi:type="object">Tweakwise\Magento2Tweakwise\Model\NavigationConfig\Search</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="search.result">
            <block before="-" class="Tweakwise\Magento2Tweakwise\Block\Navigation\SearchBanner\SearchBannerRenderer" name="navigation.search.banner.products.top" template="Tweakwise_Magento2Tweakwise::searchbanner/search.banner.products.top.phtml">
                <arguments>
                    <argument name="tweakwise_navigation_context" xsi:type="object">Tweakwise\Magento2Tweakwise\Model\NavigationConfig\Search</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="catalogsearch.leftnav">
            <arguments>
                <argument name="tweakwise_navigation_config" xsi:type="object">Tweakwise\Magento2Tweakwise\Model\NavigationConfig\Search</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
